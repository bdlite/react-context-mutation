{
  "compilerOptions": {
    "outDir": "./es",
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "jsx": "react",
    // "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}